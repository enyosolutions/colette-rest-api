{% if shareLink is not defined %}
{%  set shareLink = app.request.host ~ app.request.requestUri %}
{% endif %}
{% if shareTitle is not defined %}
    {%  set shareTitle = "kenweego, the weekend flights search engine" %}
{% endif %}
